{
    "openapi": "3.0.0",
    "info": {
        "title": "Nodejs - Solid | Documentation",
        "description": "SOLID challenge API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Create user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "contoso",
                                    "description": "user@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Email already exists"
                    }
                }
            },
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "List users",
                "description": "List all user",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "header",
                        "description": "user that need to be list",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Please check the user id again"
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Show user profile",
                "description": "Show a user's profile",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "user that need to be list",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Id does not exists"
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "Users"
                ],
                "summary": "Turn Admin ",
                "description": "Grants administrator privileges to a user",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "user that need to be list",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Id does not exists"
                    }
                }
            }
        }
    }
}